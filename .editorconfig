# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript and JavaScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# Package files
[{package.json,package-lock.json,tsconfig.json}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# MDX files
[*.mdx]
trim_trailing_whitespace = false
max_line_length = 80

# CSS and related files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Configuration files
[.{editorconfig,eslintrc,prettierrc,babelrc}]
indent_size = 2

# Git files
[{.gitignore,.gitattributes}]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# SQL files
[*.sql]
indent_size = 2

# Python files (for scripts)
[*.py]
indent_size = 4

# Environment files
[.env*]
insert_final_newline = false

# Next.js specific
[next.config.{js,mjs,ts}]
indent_size = 2

# Tailwind config
[tailwind.config.{js,ts}]
indent_size = 2

# Jest config
[jest.config.{js,ts}]
indent_size = 2

# Vercel config
[vercel.json]
indent_size = 2

# Supabase files
[supabase/**/*.sql]
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_size = 2