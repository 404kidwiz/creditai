# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===================================
# Application Configuration
# ===================================
NEXT_PUBLIC_APP_NAME="CreditAI"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="AI-powered credit repair and monitoring platform"
NODE_ENV="development"

# ===================================
# Database Configuration
# ===================================
# Supabase
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_PROJECT_ID="your-supabase-project-id"

# Database URL (for migrations)
DATABASE_URL="postgresql://username:password@localhost:5432/creditai"

# ===================================
# Authentication & Security
# ===================================
NEXTAUTH_SECRET="your-nextauth-secret-key-minimum-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# JWT Secret for custom auth
JWT_SECRET="your-jwt-secret-key-minimum-32-characters"

# Encryption keys (generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your-256-bit-encryption-key-base64-encoded"
ENCRYPTION_IV="your-128-bit-initialization-vector"

# ===================================
# AI Services
# ===================================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORGANIZATION_ID="org-your-organization-id"

# Google AI (Gemini)
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# Anthropic Claude
ANTHROPIC_API_KEY="your-anthropic-api-key"

# ===================================
# Credit Bureau APIs
# ===================================
# Experian
EXPERIAN_API_KEY="your-experian-api-key"
EXPERIAN_API_SECRET="your-experian-api-secret"
EXPERIAN_SANDBOX_URL="https://sandbox.experian.com"
EXPERIAN_PRODUCTION_URL="https://api.experian.com"

# Equifax
EQUIFAX_API_KEY="your-equifax-api-key"
EQUIFAX_API_SECRET="your-equifax-api-secret"

# TransUnion
TRANSUNION_API_KEY="your-transunion-api-key"
TRANSUNION_API_SECRET="your-transunion-api-secret"

# ===================================
# Email Services
# ===================================
# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@creditai.com"

# Resend
RESEND_API_KEY="re_your-resend-api-key"

# SMTP (fallback)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# ===================================
# SMS Services
# ===================================
# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ===================================
# File Storage
# ===================================
# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="creditai-documents"

# Supabase Storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET="documents"

# ===================================
# Payment Processing
# ===================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Stripe Product IDs
STRIPE_BASIC_PRICE_ID="price_basic_monthly"
STRIPE_PRO_PRICE_ID="price_pro_monthly"
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly"

# ===================================
# Analytics & Monitoring
# ===================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Posthog
NEXT_PUBLIC_POSTHOG_KEY="phc_your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn"
SENTRY_ORG="your-org"
SENTRY_PROJECT="creditai"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ===================================
# API Rate Limiting
# ===================================
RATE_LIMIT_WINDOW="60000"  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_REDIS_URL="redis://localhost:6379"

# ===================================
# Feature Flags
# ===================================
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="true"
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ===================================
# Development Tools
# ===================================
# Bundle Analyzer
ANALYZE="false"

# Debugging
DEBUG="creditai:*"
NEXT_PUBLIC_DEBUG="false"

# ===================================
# File Upload Configuration
# ===================================
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx,txt"
MAX_FILES_PER_UPLOAD="5"

# ===================================
# Webhook URLs
# ===================================
STRIPE_WEBHOOK_URL="http://localhost:3000/api/webhooks/stripe"
PLAID_WEBHOOK_URL="http://localhost:3000/api/webhooks/plaid"

# ===================================
# External Service URLs
# ===================================
CREDIT_MONITORING_API_URL="https://api.creditmonitoring.com"
DISPUTE_TRACKING_API_URL="https://api.disputetracking.com"

# ===================================
# Compliance & Security
# ===================================
# PCI DSS
PCI_COMPLIANCE_MODE="true"
DATA_RETENTION_DAYS="2555"  # 7 years for financial data

# GDPR
GDPR_COMPLIANCE_MODE="true"
COOKIE_CONSENT_REQUIRED="true"

# ===================================
# Logging
# ===================================
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE_PATH="./logs/app.log"

# ===================================
# Cache Configuration
# ===================================
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600"  # 1 hour in seconds

# ===================================
# Backup Configuration
# ===================================
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM