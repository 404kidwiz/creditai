# Production Environment Configuration Template
# IMPORTANT: Use secure, unique values for all secrets
# Store sensitive values in your deployment system (AWS Secrets Manager, etc.)

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=CreditAI
NEXT_PUBLIC_APP_URL=https://creditai.com
NEXT_PUBLIC_API_URL=https://api.creditai.com

# Database (Use connection pooler in production)
DATABASE_URL=postgresql://creditai_prod:SECURE_PRODUCTION_PASSWORD@prod-db.creditai.com:5432/creditai_production
DIRECT_URL=postgresql://creditai_prod:SECURE_PRODUCTION_PASSWORD@prod-db.creditai.com:5432/creditai_production

# Supabase (Production Instance)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key
SUPABASE_JWT_SECRET=your_production_jwt_secret

# Authentication
NEXTAUTH_SECRET=YOUR_SECURE_PRODUCTION_NEXTAUTH_SECRET_MIN_32_CHARS
NEXTAUTH_URL=https://creditai.com

# Redis Cache (Production Cluster)
REDIS_URL=rediss://prod-redis.creditai.com:6380
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD

# Google Cloud (Production Project)
GOOGLE_CLOUD_PROJECT_ID=creditai-production
GOOGLE_APPLICATION_CREDENTIALS=./credentials/production-service-account.json
GOOGLE_VISION_API_KEY=your_production_vision_api_key
GOOGLE_CLOUD_STORAGE_BUCKET=creditai-production-storage

# Google AI/Gemini
GOOGLE_AI_API_KEY=your_production_gemini_api_key

# Stripe (Live Keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email (Production SMTP)
EMAIL_FROM=noreply@creditai.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_SECURE=true

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_PRODUCTION_ID
SENTRY_DSN=https://your_production_sentry_dsn@sentry.io/project
SENTRY_ORG=creditai
SENTRY_PROJECT=creditai-production
SENTRY_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_REAL_PAYMENTS=true

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE=./logs/production.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Security (Strict Production Settings)
CORS_ORIGIN=https://creditai.com,https://www.creditai.com
RATE_LIMIT_MAX=50
RATE_LIMIT_WINDOW=900000
BCRYPT_ROUNDS=12

# API Keys (Production)
OPENAI_API_KEY=your_production_openai_key
ANTHROPIC_API_KEY=your_production_anthropic_key

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# Session Configuration
SESSION_SECRET=YOUR_SECURE_PRODUCTION_SESSION_SECRET_MIN_32_CHARS
SESSION_TIMEOUT=1800000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Database Connection Pool (Production Optimized)
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=60000

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/creditai.com.pem
SSL_KEY_PATH=/etc/ssl/private/creditai.com.key
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
HSTS_MAX_AGE=31536000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=ops@creditai.com
ALERT_SLACK_WEBHOOK=YOUR_SLACK_WEBHOOK_URL

# Load Balancing and Scaling
LOAD_BALANCER_ENABLED=true
MAX_CONNECTIONS=1000
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_TARGET_PERCENTAGE=70

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.creditai.com
CDN_CACHE_TTL=86400

# Cache Configuration
CACHE_TTL=7200
CACHE_MAX_SIZE=1GB
REDIS_CLUSTER_ENABLED=true

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
DATADOG_API_KEY=your_datadog_api_key

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# API Rate Limiting
API_RATE_LIMIT_BURST=100
API_RATE_LIMIT_SUSTAINED=10
UPLOAD_RATE_LIMIT=2

# Compliance and Audit
AUDIT_LOGGING_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
SOC2_LOGGING_ENABLED=true

# Disaster Recovery
DR_ENABLED=true
DR_BACKUP_FREQUENCY=hourly
DR_REPLICATION_REGION=us-west-2
DR_RTO_MINUTES=15
DR_RPO_MINUTES=60

# Third-party Integrations
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET
API_VERSIONING_ENABLED=true
API_DEPRECATION_WARNINGS=true