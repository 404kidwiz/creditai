# Development Environment Configuration Template
# Copy this to .env.local and fill in the values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=CreditAI Development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database
DATABASE_URL=postgresql://creditai:development_password@localhost:5432/creditai_dev
DIRECT_URL=postgresql://creditai:development_password@localhost:5432/creditai_dev

# Supabase (Development Instance)
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_dev_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key
SUPABASE_JWT_SECRET=your_dev_jwt_secret

# Authentication
NEXTAUTH_SECRET=your_dev_nextauth_secret_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# Redis Cache
REDIS_URL=redis://localhost:6379

# Google Cloud (Development Project)
GOOGLE_CLOUD_PROJECT_ID=creditai-dev
GOOGLE_APPLICATION_CREDENTIALS=./credentials/dev-service-account.json
GOOGLE_VISION_API_KEY=your_dev_vision_api_key
GOOGLE_CLOUD_STORAGE_BUCKET=creditai-dev-storage

# Google AI/Gemini
GOOGLE_AI_API_KEY=your_dev_gemini_api_key

# Stripe (Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_dev_publishable_key
STRIPE_SECRET_KEY=sk_test_your_dev_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_dev_webhook_secret

# Email (Development - Use MailCatcher)
EMAIL_FROM=noreply@dev.creditai.com
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
SENTRY_ORG=creditai-dev
SENTRY_PROJECT=creditai-dev

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_REAL_PAYMENTS=false

# Development Tools
CHOKIDAR_USEPOLLING=true
BROWSER=none
FAST_REFRESH=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=./logs/dev.log

# Security (Relaxed for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# API Keys (Development/Mock)
OPENAI_API_KEY=your_dev_openai_key
ANTHROPIC_API_KEY=your_dev_anthropic_key

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# Session Configuration
SESSION_SECRET=your_dev_session_secret_min_32_chars
SESSION_TIMEOUT=86400000

# Development Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000