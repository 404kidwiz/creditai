# Staging Environment Configuration Template
# Copy this to .env.staging and fill in the values

# Application
NODE_ENV=staging
NEXT_PUBLIC_APP_NAME=CreditAI Staging
NEXT_PUBLIC_APP_URL=https://staging.creditai.com
NEXT_PUBLIC_API_URL=https://staging.creditai.com/api

# Database
DATABASE_URL=postgresql://creditai_staging:staging_secure_password@staging-db.creditai.com:5432/creditai_staging
DIRECT_URL=postgresql://creditai_staging:staging_secure_password@staging-db.creditai.com:5432/creditai_staging

# Supabase (Staging Instance)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_service_role_key
SUPABASE_JWT_SECRET=your_staging_jwt_secret

# Authentication
NEXTAUTH_SECRET=your_staging_nextauth_secret_min_32_chars_secure
NEXTAUTH_URL=https://staging.creditai.com

# Redis Cache
REDIS_URL=redis://staging-redis.creditai.com:6379

# Google Cloud (Staging Project)
GOOGLE_CLOUD_PROJECT_ID=creditai-staging
GOOGLE_APPLICATION_CREDENTIALS=./credentials/staging-service-account.json
GOOGLE_VISION_API_KEY=your_staging_vision_api_key
GOOGLE_CLOUD_STORAGE_BUCKET=creditai-staging-storage

# Google AI/Gemini
GOOGLE_AI_API_KEY=your_staging_gemini_api_key

# Stripe (Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_publishable_key
STRIPE_SECRET_KEY=sk_test_your_staging_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret

# Email (Staging - Use test email service)
EMAIL_FROM=noreply@staging.creditai.com
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_SECURE=true

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_STAGING_ID
SENTRY_DSN=https://your_staging_sentry_dsn@sentry.io/project
SENTRY_ORG=creditai
SENTRY_PROJECT=creditai-staging
SENTRY_ENVIRONMENT=staging

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_REAL_PAYMENTS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/staging.log

# Security (Production-like but slightly relaxed)
CORS_ORIGIN=https://staging.creditai.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# API Keys (Staging/Limited)
OPENAI_API_KEY=your_staging_openai_key
ANTHROPIC_API_KEY=your_staging_anthropic_key

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# Session Configuration
SESSION_SECRET=your_staging_session_secret_min_32_chars_secure
SESSION_TIMEOUT=3600000

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.creditai.com.pem
SSL_KEY_PATH=/etc/ssl/private/staging.creditai.com.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Load Balancing
LOAD_BALANCER_ENABLED=true
MAX_CONNECTIONS=100

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn-staging.creditai.com

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100MB